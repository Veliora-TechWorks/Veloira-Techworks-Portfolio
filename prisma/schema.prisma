generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(EDITOR)
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  posts     Post[]
  projects  Project[]

  @@map("users")
}

model Service {
  id          String   @id @default(cuid())
  title       String
  description String
  icon        String
  features    String[]
  price       String?
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("services")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  content     String?
  image       String?
  gallery     String[]
  category    String
  tags        String[]
  features    String[]
  client      String?
  duration    String?
  technologies String[]
  liveUrl     String?
  githubUrl   String?
  isActive    Boolean  @default(true)
  isFeatured  Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])

  @@map("projects")
}

model Post {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String?
  content     String
  image       String?
  category    String
  tags        String[]
  isPublished Boolean  @default(false)
  isFeatured  Boolean  @default(false)
  views       Int      @default(0)
  readTime    Int      @default(5)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])

  // SEO
  seoTitle       String?
  seoDescription String?
  seoKeywords    String[]

  @@map("posts")
}

model Contact {
  id        String      @id @default(cuid())
  name      String
  email     String
  phone     String?
  company   String?
  subject   String
  message   String
  status    ContactStatus @default(NEW)
  source    String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@map("contacts")
}

model Media {
  id        String    @id @default(cuid())
  filename  String
  originalName String
  mimeType  String
  size      Int
  url       String
  alt       String?
  category  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("media")
}

model Page {
  id        String   @id @default(cuid())
  slug      String   @unique
  title     String
  content   Json
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // SEO
  seoTitle       String?
  seoDescription String?
  seoKeywords    String[]

  @@map("pages")
}

model Setting {
  id    String @id @default(cuid())
  key   String @unique
  value Json
  type  String

  @@map("settings")
}

enum Role {
  ADMIN
  EDITOR
}

enum ContactStatus {
  NEW
  IN_PROGRESS
  COMPLETED
  ARCHIVED
}